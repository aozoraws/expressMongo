extends layout

block content
  h1= title

  div(class="card")
    div(class="card-body justify-content-center text-center")
      ul(class="list-inline")
        a(href="/" class="list-inline-item badge badge-info") Home
        a(href="/data" class="list-inline-item  badge badge-success") Data
      img(src=(data ? data.description : `/static/images/`+image ), alt="", srcset="" class="img-fluid", style="height:300px")

    #{image}

    if (typeof message != 'undefined')
      p= message

    div(class="container p-3")
      form(method="POST", action="/data/detail")
        div(class="form-group")
          label(for="title") Book Title
          input(type="text", name="title",class="form-control", value=(data ? data.title : null ))
          small(class="form-text text-muted") The title of the book.
          
        div(class="form-group")
          label(for="title") Author Name
          input(type="text", name="author",class="form-control", value=(data ? data.author : null ))
          small(class="form-text text-muted") The author of the book.
          
        div(class="form-group")
          label(for="title") Description
          input(type="text", name="description",class="form-control", value=(data ? data.description : null ))
          small(class="form-text text-muted") The Description of the book.
        
        
        input(type="hidden", name="id",class="form-control", value=(data ? data.id : null ))

        button(type="submit", class="btn btn-success rounded-0") Submit
      
